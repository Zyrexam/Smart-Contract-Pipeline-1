{
  "contract_name": "MyToken",
  "contract_type": "ERC20",
  "description": "An ERC20 token with minting and burning capabilities.",
  "state_variables": [
    {
      "name": "totalSupply",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "1000000"
    },
    {
      "name": "owner",
      "type": "address",
      "visibility": "private",
      "initial_value": ""
    }
  ],
  "roles": [
    {
      "name": "owner",
      "permissions": [
        "mint"
      ]
    }
  ],
  "functions": [
    {
      "name": "mint",
      "visibility": "public",
      "inputs": [
        {
          "name": "amount",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Allows the owner to mint additional tokens."
    },
    {
      "name": "burn",
      "visibility": "public",
      "inputs": [
        {
          "name": "amount",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "",
      "description": "Allows any token holder to burn their tokens."
    },
    {
      "name": "transfer",
      "visibility": "public",
      "inputs": [
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "amount",
          "type": "uint256"
        }
      ],
      "outputs": [
        {
          "name": "success",
          "type": "bool"
        }
      ],
      "restricted_to": "",
      "description": "Standard ERC20 transfer function."
    }
  ],
  "events": [
    {
      "name": "Transfer",
      "parameters": [
        {
          "name": "from",
          "type": "address"
        },
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "value",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "Mint",
      "parameters": [
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "value",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "Burn",
      "parameters": [
        {
          "name": "from",
          "type": "address"
        },
        {
          "name": "value",
          "type": "uint256"
        }
      ]
    }
  ],
  "modifiers": []
}