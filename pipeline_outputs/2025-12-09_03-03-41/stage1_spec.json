{
  "contract_name": "DAOVotingSystem",
  "contract_type": "voting",
  "description": "A secure and transparent decentralized autonomous organization (DAO) voting system where token holders can submit proposals and vote on them. The system ensures each token is counted once, prevents double-voting, calculates results, and automatically executes approved actions when a majority is reached.",
  "state_variables": [
    {
      "name": "proposals",
      "type": "mapping(uint256 => Proposal)",
      "visibility": "public",
      "initial_value": null
    },
    {
      "name": "votes",
      "type": "mapping(address => mapping(uint256 => bool))",
      "visibility": "private",
      "initial_value": null
    },
    {
      "name": "tokenBalance",
      "type": "mapping(address => uint256)",
      "visibility": "public",
      "initial_value": null
    }
  ],
  "roles": [
    {
      "name": "tokenHolder",
      "permissions": [
        "submitProposal",
        "vote"
      ]
    }
  ],
  "functions": [
    {
      "name": "submitProposal",
      "visibility": "public",
      "inputs": [
        {
          "name": "description",
          "type": "string"
        }
      ],
      "outputs": [
        {
          "name": "proposalId",
          "type": "uint256"
        }
      ],
      "restricted_to": "tokenHolder",
      "description": "Allows token holders to submit a new proposal for voting."
    },
    {
      "name": "vote",
      "visibility": "public",
      "inputs": [
        {
          "name": "proposalId",
          "type": "uint256"
        },
        {
          "name": "vote",
          "type": "bool"
        }
      ],
      "outputs": [],
      "restricted_to": "tokenHolder",
      "description": "Allows token holders to vote on a proposal. Ensures each token is counted once and prevents double-voting."
    },
    {
      "name": "calculateResults",
      "visibility": "internal",
      "inputs": [
        {
          "name": "proposalId",
          "type": "uint256"
        }
      ],
      "outputs": [
        {
          "name": "approved",
          "type": "bool"
        }
      ],
      "restricted_to": "",
      "description": "Calculates the results of a proposal vote and determines if the majority is reached."
    },
    {
      "name": "executeProposal",
      "visibility": "internal",
      "inputs": [
        {
          "name": "proposalId",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "",
      "description": "Automatically executes the approved actions of a proposal when a majority is reached."
    }
  ],
  "events": [
    {
      "name": "ProposalSubmitted",
      "parameters": [
        {
          "name": "proposalId",
          "type": "uint256"
        },
        {
          "name": "description",
          "type": "string"
        }
      ]
    },
    {
      "name": "VoteCast",
      "parameters": [
        {
          "name": "voter",
          "type": "address"
        },
        {
          "name": "proposalId",
          "type": "uint256"
        },
        {
          "name": "vote",
          "type": "bool"
        }
      ]
    },
    {
      "name": "ProposalExecuted",
      "parameters": [
        {
          "name": "proposalId",
          "type": "uint256"
        }
      ]
    }
  ],
  "modifiers": [
    {
      "name": "onlyTokenHolder",
      "condition": "msg.sender has tokens",
      "description": "Restricts function access to token holders only."
    }
  ]
}