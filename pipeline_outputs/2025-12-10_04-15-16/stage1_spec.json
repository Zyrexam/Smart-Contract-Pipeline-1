{
  "contract_name": "SimpleToken",
  "contract_type": "ERC20",
  "description": "A simple token that allows minting and burning.",
  "state_variables": [
    {
      "name": "totalSupply",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "0"
    },
    {
      "name": "balances",
      "type": "mapping(address => uint256)",
      "visibility": "private",
      "initial_value": "{}"
    }
  ],
  "roles": [
    {
      "name": "owner",
      "permissions": [
        "mint",
        "burn"
      ]
    }
  ],
  "functions": [
    {
      "name": "mint",
      "visibility": "public",
      "inputs": [
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "amount",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Mints a specified amount of tokens to a given address."
    },
    {
      "name": "burn",
      "visibility": "public",
      "inputs": [
        {
          "name": "from",
          "type": "address"
        },
        {
          "name": "amount",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Burns a specified amount of tokens from a given address."
    }
  ],
  "events": [
    {
      "name": "Mint",
      "parameters": [
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "amount",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "Burn",
      "parameters": [
        {
          "name": "from",
          "type": "address"
        },
        {
          "name": "amount",
          "type": "uint256"
        }
      ]
    }
  ],
  "modifiers": []
}