{
  "contract_name": "CarbonCreditNFT",
  "contract_type": "NFT",
  "description": "A smart contract for a carbon-credit NFT that burns when redeemed for carbon offsets.",
  "state_variables": [
    {
      "name": "owner",
      "type": "address",
      "visibility": "public",
      "initial_value": "0x0"
    },
    {
      "name": "tokenId",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "0"
    },
    {
      "name": "isRedeemed",
      "type": "bool",
      "visibility": "private",
      "initial_value": "false"
    }
  ],
  "roles": [
    {
      "name": "owner",
      "permissions": [
        "mint",
        "redeem",
        "burn"
      ]
    }
  ],
  "functions": [
    {
      "name": "mint",
      "visibility": "public",
      "inputs": [
        {
          "name": "to",
          "type": "address"
        }
      ],
      "outputs": [
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ],
      "restricted_to": "owner",
      "description": "Mints a new carbon-credit NFT to the specified address."
    },
    {
      "name": "redeem",
      "visibility": "public",
      "inputs": [
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Redeems the NFT for carbon offsets and marks it as redeemed."
    },
    {
      "name": "burn",
      "visibility": "internal",
      "inputs": [
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Burns the NFT after it has been redeemed."
    }
  ],
  "events": [
    {
      "name": "Minted",
      "parameters": [
        {
          "name": "to",
          "type": "address"
        },
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "Redeemed",
      "parameters": [
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "Burned",
      "parameters": [
        {
          "name": "tokenId",
          "type": "uint256"
        }
      ]
    }
  ],
  "modifiers": [
    {
      "name": "onlyOwner",
      "condition": "msg.sender == owner",
      "description": "Ensures that the function is called by the owner."
    },
    {
      "name": "notRedeemed",
      "condition": "!isRedeemed",
      "description": "Ensures that the NFT has not been redeemed yet."
    }
  ]
}