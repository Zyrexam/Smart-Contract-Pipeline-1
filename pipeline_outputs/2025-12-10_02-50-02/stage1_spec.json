{
  "contract_name": "DecentralizedTicketingPlatform",
  "contract_type": "Ticketing",
  "description": "A decentralized platform for minting and managing event tickets with anti-bot verification.",
  "state_variables": [
    {
      "name": "tickets",
      "type": "mapping(uint256 => address)",
      "visibility": "private",
      "initial_value": "{}"
    },
    {
      "name": "ticketPrice",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "0"
    },
    {
      "name": "totalTickets",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "0"
    },
    {
      "name": "ticketsSold",
      "type": "uint256",
      "visibility": "public",
      "initial_value": "0"
    },
    {
      "name": "owner",
      "type": "address",
      "visibility": "public",
      "initial_value": "msg.sender"
    }
  ],
  "roles": [
    {
      "name": "owner",
      "permissions": [
        "setTicketPrice",
        "mintTickets",
        "withdrawFunds"
      ]
    },
    {
      "name": "user",
      "permissions": [
        "buyTicket"
      ]
    }
  ],
  "functions": [
    {
      "name": "setTicketPrice",
      "visibility": "public",
      "inputs": [
        {
          "name": "price",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Sets the price for each ticket."
    },
    {
      "name": "mintTickets",
      "visibility": "public",
      "inputs": [
        {
          "name": "numberOfTickets",
          "type": "uint256"
        }
      ],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Mints a specified number of tickets."
    },
    {
      "name": "buyTicket",
      "visibility": "public",
      "inputs": [],
      "outputs": [],
      "restricted_to": "user",
      "description": "Allows a user to purchase a ticket with anti-bot verification."
    },
    {
      "name": "withdrawFunds",
      "visibility": "public",
      "inputs": [],
      "outputs": [],
      "restricted_to": "owner",
      "description": "Allows the owner to withdraw funds from ticket sales."
    }
  ],
  "events": [
    {
      "name": "TicketPurchased",
      "parameters": [
        {
          "name": "buyer",
          "type": "address"
        },
        {
          "name": "ticketId",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "TicketsMinted",
      "parameters": [
        {
          "name": "numberOfTickets",
          "type": "uint256"
        }
      ]
    },
    {
      "name": "FundsWithdrawn",
      "parameters": [
        {
          "name": "amount",
          "type": "uint256"
        }
      ]
    }
  ],
  "modifiers": [
    {
      "name": "antiBotVerification",
      "condition": "require(verifyHuman(msg.sender))",
      "description": "Ensures that the caller is a human and not a bot."
    }
  ]
}